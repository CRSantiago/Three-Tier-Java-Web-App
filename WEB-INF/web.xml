<web-app>

   <!-- General description of your Web application -->
   <display-name>
      CNT 4714 Spring 2023 Project 4 Enterprise System
   </display-name>

   <description>
       A Servlet/JPS-based Multi-tiered Enterprise Application Using a Tomcat
        Container
   </description>

   <!-- Servlet definitions and mappings  -->

      <servlet>
         <servlet-name>authentication</servlet-name>
         <description> A servlet that handles user authentication. </description>
         <servlet-class> authenticationServlet  </servlet-class>
      </servlet>

               <servlet-mapping>
                  <servlet-name>authentication</servlet-name>
                  <url-pattern>/auth</url-pattern>
               </servlet-mapping>

      <servlet>
         <servlet-name>ClientUser</servlet-name>
         <description> A servlet that handles client user sql commands. </description>
         <servlet-class> ClientUserServlet  </servlet-class>
      </servlet>

               <servlet-mapping>
                  <servlet-name>ClientUser</servlet-name>
                  <url-pattern>/clientuser</url-pattern>
               </servlet-mapping>

      <servlet>
         <servlet-name>RootUser</servlet-name>
         <description> A servlet that handles root user sql commands. </description>
         <servlet-class> RootUserServlet  </servlet-class>
      </servlet>

               <servlet-mapping>
                  <servlet-name>RootUser</servlet-name>
                  <url-pattern>/rootuser</url-pattern>
               </servlet-mapping>

      <servlet>
         <servlet-name>SupplierInsert</servlet-name>
         <description> A servlet that handles data entry user insert commands into suppliers table. </description>
         <servlet-class> SupplierInsertServlet  </servlet-class>
      </servlet>

               <servlet-mapping>
                  <servlet-name>SupplierInsert</servlet-name>
                  <url-pattern>/suppliersinsert</url-pattern>
               </servlet-mapping>

      <servlet>
         <servlet-name>PartInsert</servlet-name>
         <description> A servlet that handles data entry user insert commands into parts table. </description>
         <servlet-class> PartInsertServlet  </servlet-class>
      </servlet>

               <servlet-mapping>
                  <servlet-name>PartInsert</servlet-name>
                  <url-pattern>/partsinsert</url-pattern>
               </servlet-mapping>

      <servlet>
         <servlet-name>JobInsert</servlet-name>
         <description> A servlet that handles data entry user insert commands into jobs table. </description>
         <servlet-class> JobInsertServlet  </servlet-class>
      </servlet>

               <servlet-mapping>
                  <servlet-name>JobInsert</servlet-name>
                  <url-pattern>/jobsinsert</url-pattern>
               </servlet-mapping>

      <servlet>
         <servlet-name>ShipmentInsert</servlet-name>
         <description> A servlet that handles data entry user insert commands into shipments table. </description>
         <servlet-class> ShipmentInsertServlet  </servlet-class>
      </servlet>

               <servlet-mapping>
                  <servlet-name>ShipmentInsert</servlet-name>
                  <url-pattern>/shipmentsinsert</url-pattern>
               </servlet-mapping>

</web-app>